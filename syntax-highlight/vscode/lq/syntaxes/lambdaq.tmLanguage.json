{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lambdaQ Quantum Programming Language",
	"patterns": [
    {
			"include": "#operators"
		},
    {
			"include": "#typewords"
		},
    {
      "include": "#typeoperators"
    },
		{
			"include": "#keywords"
		},
    {
			"include": "#atcontrols"
		},
    {
			"include": "#gates"
		},
    {
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
    {
			"include": "#comments"
		}
	],
	"repository": {
    "operators": {
			"patterns": [{
				"name": "keyword.type.operator.lambdaq",
				"match": "<-|\\.|\\$|=|\\[|\\]|;"
			}]
		},
    "typeoperators": {
			"patterns": [{
				"name": "comment.lambdaq",
				"match": "->|!"
			}]
		},
    "typewords": {
			"patterns": [{
				"name": "comment.lambdaq",
				"match": "\\b(Qbit\\s+\\*\\s+|Bit\\s+\\*\\s+|Qbit\\s+\\*\\*\\s+\\d+|Bit\\s+\\*\\*\\s+\\d+|Qbit|Bit|\\(\\))\\b"
			}]
		},
    "numbers": {
			"patterns": [{
				"name": "string.numeric.lambdaq",
				"match": "\\b-?(?:\\d+\\.\\d*|\\.\\d+|\\d+)(?:[eE][-+]?\\d+)?\\b"
			}]
		},
    "keywords": {
			"patterns": [{
				"name": "keyword.number.lambdaq",
				"match": "\\b(if|then|else|let|in|with|ctrl|gate)\\b"
			}]
		},
		"atcontrols": {
			"patterns": [{
				"name": "string.lambdaq",
				"match": "@1|@0|@\\+i|@-i|@\\+|@-"
			}]
		},
    "gates": {
			"patterns": [{
				"name": "string.gate.lambdaq",
				"match": "\\b[A-Z][A-Z0-9]*\\b"
			}]
		},
		"strings": {
			"name": "string.lambdaq",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lambdaq",
					"match": "\\\\."
				}
			]
		},
    "comments": {
      "patterns": [
        {
            "name": "constant.numeric.lambdaq",
            "match": "--.*"
        },
        {
          "name": "constant.numeric.lambdaq",
          "begin": "{-",
					"captures": {
						"0": {
							"name": "constant.numeric.lambdaq"
						}
					},
					"end": "-}"
        }
      ]
    }
	},
	"scopeName": "source.lambdaq"
}
